#!/usr/bin/env ruby

require 'nib/crypt'

desc 'Initialize a project (create or pull secret key)'
command :'crypt-init' do |c|
  c.action do |_global_options, _options, args|
    Nib::Crypt.init(*args)
  end
end

desc 'Encrypt a file'
arg :input
arg :output
command :encrypt do |c|
  c.action do |_global_options, _options, args|
    Nib::Crypt.encrypt(*args)
  end
end

desc 'Decrypt a file'
arg :input
arg :output
command :decrypt do |c|
  c.action do |_global_options, _options, args|
    Nib::Crypt.decrypt(*args)
  end
end

exit run(ARGV)
